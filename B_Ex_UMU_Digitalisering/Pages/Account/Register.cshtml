@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera";
    ViewBag.Current = "Register";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4>Skapa ett nytt konto.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="email" asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Input.Password" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="password" asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="password" asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>




